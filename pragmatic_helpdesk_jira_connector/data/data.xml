<odoo>

    <record id="issue_update_cron" model="ir.cron">
        <field name="name">Jira Issues Update Cron (Export)</field>
        <field name="model_id" ref="model_res_company"/>
        <field name="state">code</field>
        <field name="code">model.latest_jira_issue_update()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(datetime.now() + relativedelta(hours=1)).replace(hour=0, minute=0, second=0, microsecond=0) - timedelta(hours=2)"/>
        <field name="active" eval="True"/>
    </record>

